PROGRAM = miniml

FILES[] =
	environment
	eval
	lexer
	mySet
	parser
	syntax
	typing
	util
	main

OCamlGeneratedFiles(lexer.ml parser.mli parser.ml)

OCamlProgram($(PROGRAM), $(FILES))

.DEFAULT: \
	$(if $(NATIVE_ENABLED), $(PROGRAM).opt)

.PHONY: clean

clean:
  rm -f \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(PROGRAM).opt
